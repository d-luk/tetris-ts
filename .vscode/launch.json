{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "chrome",
            "request": "launch",
            "webRoot": "${workspaceRoot}",
            "url": "http://localhost:8080",
            "sourceMaps": true,
            "runtimeArgs": [
                "--new-window",
                "--remote-debugging-port=9222"
            ],
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        }
    ]
}